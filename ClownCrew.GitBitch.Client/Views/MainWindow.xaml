<Window x:Class="ClownCrew.GitBitch.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:ClownCrew.GitBitch.Client.ViewModels"
        Title="Git Bitch Alfa"
        Height="350"
        Width="525">

    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    
    <Grid>
        <StackPanel>
            <ListView ItemsSource="{Binding Phrases}">
            </ListView>
            <StatusBar>
                <StatusBarItem Content="{Binding Path=MainCommandListener}" />
                <StatusBarItem Content="{Binding Path=QuestionCommandListener}"/>
            </StatusBar>
        </StackPanel>
    </Grid>
</Window>
